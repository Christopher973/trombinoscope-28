generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Department {
  id          Int          @id @default(autoincrement())
  name        String       @unique
  teamMembers TeamMember[]

  @@map("departments")
}

model Location {
  id          Int          @id @default(autoincrement())
  name        String       @unique
  teamMembers TeamMember[]

  @@map("locations")
}

model TeamMember {
  // Identification
  id                    Int          @id @default(autoincrement())
  serviceAssignmentCode String       @unique

  // Information
  firstname             String
  lastname              String
  professionnalEmail    String       @unique
  phoneNumber           String?
  imageUrl              String?
  birthday              DateTime?

  // RH Information
  jobDescription        String
  startDate             DateTime
  managementCategory    String      
  gender                String?      @default("Non d√©fini")


  // Relation to other models
  managerId             Int?
  manager               TeamMember?  @relation("ManagerToTeamMember", fields: [managerId], references: [id], onDelete: SetNull)
  directReports         TeamMember[] @relation("ManagerToTeamMember")

  departmentId          Int?
  department            Department?  @relation(fields: [departmentId], references: [id], onDelete: SetNull)

  locationId            Int?
  location              Location?    @relation(fields: [locationId], references: [id], onDelete: SetNull)

  createdAt             DateTime     @default(now())
  updatedAt             DateTime     @updatedAt

  @@map("team_members")
}
